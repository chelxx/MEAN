<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="/stylesheets/style.css" rel="stylesheet" type="text/css">
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
    <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
    <link rel='stylesheet' href='/stylesheets/style.css'>
    <title>DOJO SURVEY</title>
    <script type ="text/javascript">
        $(document). ready(function (){

           var socket  = io.connect();

           $( 'form#surveyform').submit(function (){
               socket.emit( "posting_form", $(this).serialize());
               return false;
           });

           socket.on( 'updated_msg', function (data){
               console.log(data);
               $("div#result").append("Your Information emitted by the server is: " + data.data);
               let jsonresult = JSON.stringify(data.data);
            });

            socket.on('random', function (data){
               console.log(data);
               $("div#results").append("Your lucky number emitted by the server is: " + data.random + "!")
            });
        })
   </script>
</head>
<body>
    <div id="result">
        <!-- RESULTS WILL GO HERE -->
    </div>
    <br>
    <div id="results">
            <!-- RESULTS WILL GO HERE -->
    </div>
    <br>
    <form method="post" id="surveyform">
    <table>
        <tr>
            <th>Your Name:</th>
            <td><input type="text" name="name"></td>
        </tr>
        <tr>
            <th>Dojo Location:</th>
            <td>
                <select name="location">
                    <option selected="selected">Select</option>
                    <option value="Chicago">Chicago</option>
                    <option value="Tulsa">Tulsa</option>
                    <option value="Seattle">Seattle</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>Favorite Language:</th>
            <td>
                <select name="language">
                    <option selected="selected">Select</option>
                    <option value="Javascript">Javascript</option>
                    <option value="Python">Python</option>
                    <option value="C#">C#</option>
                </select>
            </td>
        </tr>
        <tr>
            <th>Comment (optional):</th>
            <td><textarea name="comment" cols="20" rows="5"></textarea></td>
        </tr>
    </table>
    <button type="submit">SUBMIT!</button>
    </form>
</body>
</html>